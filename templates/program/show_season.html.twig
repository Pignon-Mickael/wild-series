{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ program.title }}</h1>
    <section>
        <p>résumé de la saison : <br> {{ season.description }}</p>

        <h2>Saison {{ season.number }} <br> parue en {{ season.year }}</h2>

        <p>Liste des épisodes : </p>

        {% for episode in season.episodes %}

            <a href="{{ path('program_episode_show', {
                'program': program.id,
                'season': season.id,
                'episode': episode.id
            }) }}">
                episode {{ episode.number }} : {{ episode.title }}
            </a>
            <br>

        {% endfor %}
    </section>

    <nav>
        <a href="{{ path('program_show', { id: program.id }) }}">Retour à la fiche détaillée
        </a>
    </nav>

{% endblock %}