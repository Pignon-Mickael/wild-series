{% extends "base.html.twig" %}

{% block title %}{{ program.title }}{% endblock %}
{% block content %}
    <div class="media">
        <img class="img-thumbnail" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for actor in program.actors %}

                <ul>
                    <li><a href="{{ path('actor_show', { 'id': actor.id}) }}">{{ actor.name }}</a></li>
                </ul>

                {% else %}

                <p>Pas d'acteur enregistré pour cette serie</p>

            {% endfor %}
        </div>
    </div>

    <nav class="season">
        {% for season in program.seasons %}
        <a href="{{ path('program_season_show', { 'program': program.id, 'season': season.id }) }}">saison {{ season.number }}</a>
        {% endfor %}
    </nav>

    <footer>
        <a href="{{ path('category_show', { 'categoryName': program.category.name}) }}">Retour à la catégorie</a>
        <br>
        <a href="{{ path('program_edit', { 'id': program.id}) }}">Editer la série</a>
    </footer>
{% endblock %}
