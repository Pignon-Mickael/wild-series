{% extends "base.html.twig" %}

{% block title %}Toutes les séries {% endblock %}

{% block content %}
<h1>Toutes les series de la table program</h1>
    {% for program in programs %}
    <div>
        <h2>{{ loop.index }} / {{ program.title }}</h2>
        <p>{{ program.summary }}</p>
        <a href="{{ path("program_show", { id: program.id}) }}">Voir la fiche</a>
    </div>
    {% else %}
    Aucune série trouvée
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}

